doctype html
html
    head
        meta(name="viewport" content='width=device-width, initial-scale=1, shrink-to-fit=no')
        title='Browser Tree'
        link(href='node_modules/bootstrap/dist/css/bootstrap.min.css' rel='stylesheet')
        link(href='./node_modules/font-awesome/css/font-awesome.min.css' rel='stylesheet').
        link(href='src/less/main.less' rel='stylesheet')
    body
        div.container-fluid
            nav.navbar.navbar-darg.bg-inverse.navbar-fixed-top.row
                div.col-xs-2.col-xs-offset-2.col-md-offset-1
                    button#menu.btn.btn-info-outline.btn-block
                        i.fa.fa-bars
                form#go-form.col-xs-5.col-md-6
                    input#urlbar.form-control
                div.col-xs-2
                    button#go.btn.btn-success-outline.btn-block
                        i.fa.fa-chevron-right

        div#sidebar.hide-sidebar
            div#resizebar
            div.row
                div.col-xs-3
                    button#back.btn.btn-info-outline.btn-block
                        i.fa.fa-caret-left
                div.col-xs-3
                    button#forward.btn.btn-info-outline.btn-block
                        i.fa.fa-caret-right
                div.col-xs-3
                    button#bookmarks.btn.btn-warning-outline.btn-block
                        i.fa.fa-star
                div.col-xs-3
                    button#newtab.btn.btn-success-outline.btn-block
                        i.fa.fa-plus

            div#tabs.list-group.btn-secondary-outline
        div#views

        script(src='./node_modules/jquery/sizzle/dist/sizzle.min.js').
        script(src='./node_modules/jquery/dist/jquery.min.js').
        script(src='./node_modules/tether/dist/js/tether.min.js').
        script(defer src='./node_modules/bootstrap/dist/js/bootstrap.min.js').
        script(src='./src/js/renderer.js').
        script(src='./src/js/sidebar.js').
        script(src='./src/js/right-click.js').
